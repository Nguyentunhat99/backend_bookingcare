<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <title>Document</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <a href="#news">News</a>
        <a href="#contact">Contact</a>
        <a href="#about">About</a>
    </div>
    <div><b>Create a new user:</b></div>
        <% for( let i=0; i < userEdit.length; i++ ) { %>
            <form action="/updateUser" method="POST">
                <div>
                    <input type="text" value="<%= userEdit[i].id %>" hidden name="id">
                </div>
                <div>
                    <label for="">First name:</label>
                    <input type="text" value="<%= userEdit[i].firstName %>" name="firstName">
                </div>
                <div>
                    <label for="">Last name:</label>
                    <input type="text" value="<%= userEdit[i].lastName %>" name="lastName">
                </div>
                <div>
                    <label for="">Email:</label>
                    <input type="email" value="<%= userEdit[i].email %>" name="email">
                </div>
                <div>
                    <label for="">Address:</label>
                    <input type="text" value="<%= userEdit[i].address %>" name="address">
                </div>
                <div>
                    <button type="submit" class="btn-submit">Submit</button>
                </div>
            </form>
        <% } %>
  </div>
</body>

</html>