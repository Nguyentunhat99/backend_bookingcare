<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/style.css">
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
    
    <!-- jQuery library -->
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.1/dist/jquery.slim.min.js"></script>
    
    <!-- Popper JS -->
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
    
    <!-- Latest compiled JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
    <title>Document</title>
</head>

<body>
    <div class="topnav">
        <a class="active" href="#home">Home</a>
        <!-- <a href="/upload-file">Upload file</a> -->
    </div>

    
    <div style="padding-left:16px">
        <h2>Edit user</h2>
    </div>    
    <div class="container">
        <div class="form-row">
            <div class="col-12"><b>Edit user:</b></div>
            <form action="/updateCRUD" method="POST">
                <div class="form-row">
                    <input class="form-control" value="<%= data.id %>" type="text" name="id" hidden>
                    <div class="form-group col-md-6">
                        <label for="">First name:</label>
                        <input class="form-control" value="<%= data.firstName %>" type="text" name="firstName">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Last name:</label>
                        <input class="form-control" value="<%= data.lastName %>" type="text" name="lastName">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Email:</label>
                        <input class="form-control" value="<%= data.email %>" type="email" name="email">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Password:</label>
                        <input class="form-control" value="<%= data.password %>" type="password" name="password">
                    </div>
                </div>
                <div class="form-row">
                    <div class="form-group col-md-12">
                        <label for="">Phone number:</label>
                        <input class="form-control" value="<%= data.phonenumber %>" type="number" name="phonenumber">
                    </div>
                    <div class="form-group col-md-6">
                        <label for="">Address:</label>
                        <input class="form-control" value="<%= data.address %>" type="text" name="address">
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Gender:</label>
                        <select class="form-control" name="gender" id="">
                            <option value="1">Male</option>
                            <option value="0">Fermale</option>
                        </select>
                    </div>
                    <div class="form-group col-md-3">
                        <label for="">Role:</label>
                        <select class="form-control" name="roleid" id="">
                            <option value="1">Admin</option>
                            <option value="2">Doctor</option>
                            <option value="3">Patient</option>
                        </select>
                    </div>
                    <div class="form-group col-md-12"><button type="submit" class="btn btn-primary">Update</button></div>
                </div>
            </form>
        </div>
    </div>

</body>

</html>